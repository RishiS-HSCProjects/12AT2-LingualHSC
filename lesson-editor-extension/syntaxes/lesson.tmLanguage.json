{
  "scopeName": "source.lesson",
  "patterns": [
    { "include": "text.html.markdown" },

    {
      "name": "markup.note.info.lesson",
      "match": "/i\\s+.*?\\\\"
    },
    {
      "name": "markup.note.warning.lesson",
      "match": "/w\\s+.*?\\\\"
    },
    {
      "name": "markup.note.tip.lesson",
      "match": "/t\\s+.*?\\\\"
    },
    {
      "name": "markup.inline.color.lesson",
      "match": "::([a-zA-Z]+|#[0-9a-fA-F]{3,6})\\{([^}]+)\\}"
    },
    {
      "name": "markup.block.lesson",
      "begin": ":::([a-zA-Z]+)",
      "beginCaptures": {
        "1": { "name": "entity.name.section.lesson.block" }
      },
      "end": ":::",
      "name": "meta.block.lesson"
    },
    {
      "name": "markup.inline.spoiler.lesson",
      "match": "\\|\\|[^|]+\\|\\|"
    },
    {
      "name": "markup.inline.quiz.lesson",
      "match": "~quizzes:[^~]+~"
    }
  ]
}
